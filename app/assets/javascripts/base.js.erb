$(document).ready(function(){
    $('.sidenav').sidenav();
    $('.modal').modal();

    dismissAlerts();
});

function addErrors(html){
    var alertContainer = $('#alert-container');
    alertContainer.append(html)
    dismissAlerts();
}

function dismissAlerts(){
    setTimeout(function () {
        $('.alert-box').fadeOut();
    }, 5000);
}